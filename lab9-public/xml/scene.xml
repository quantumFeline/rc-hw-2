<mujoco model="Skydio X2 scene">
  <include file="xml/x2.xml"/>

  <statistic center="0 0 0.1" extent="0.6" meansize=".05"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="-20" elevation="-20" ellipsoidinertia="true"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <body name="red_gate" pos="-2 0 1"> 
      <geom type="box" pos="0 -0.6 0" size="0.05 0.05 0.6" rgba="1 0 0 1"/>
      <geom type="box" pos="0 0.6 0" size="0.05 0.05 0.6" rgba="1 0 0 1"/>
      <geom type="box" pos="0 0 0.65" size="0.05 0.65 0.05" rgba="1 0 0 1"/>
      <geom type="box" pos="0 0 -0.65" size="0.05 0.65 0.05" rgba="1 0 0 1"/>
    </body>

    <body name="green_gate" pos="-4 -0.6 1.3"> 
      <geom type="box" pos="0 -0.6 0" size="0.05 0.05 0.6" rgba="0 1 0 1"/>
      <geom type="box" pos="0 0.6 0" size="0.05 0.05 0.6" rgba="0 1 0 1"/>
      <geom type="box" pos="0 0 0.65" size="0.05 0.65 0.05" rgba="0 1 0 1"/>
      <geom type="box" pos="0 0 -0.65" size="0.05 0.65 0.05" rgba="0 1 0 1"/>
    </body>

    <body name="blue_gate" pos="-6 0.6 0.7"> 
      <geom type="box" pos="0 -0.6 0" size="0.05 0.05 0.6" rgba="0 0 1 1"/>
      <geom type="box" pos="0 0.6 0" size="0.05 0.05 0.6" rgba="0 0 1 1"/>
      <geom type="box" pos="0 0 0.65" size="0.05 0.65 0.05" rgba="0 0 1 1"/>
      <geom type="box" pos="0 0 -0.65" size="0.05 0.65 0.05" rgba="0 0 1 1"/>
    </body>
  </worldbody>
</mujoco>
